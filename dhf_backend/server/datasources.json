{
  "mongodb": {
    "host": "dhf-mongodb",
    "port": 27018,
    "url": "",
    "database": "dhf-platform",
    "password": "",
    "name": "mongodb",
    "user": "",
    "connector": "mongodb"
  },
  "db": {
    "connector": "memory"
  },
  "rest": {
    "connector": "rest",
    "debug": true,
    "options": {
      "headers": {
        "accept": "application/json",
        "content-type": "application/json"
    },
    "strictSSL": false
    },
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "http://trader-api:9001/trade/exchange/{exchange}/listLockAccount",
          "options": {
            "strictSSL": false
          },
          "responsePath": ""
        },
        "functions": {
          "listLockAccount": ["exchange"]
        }
      },
      {
        "template": {
          "method": "GET",
          "url": "http://trader-api:9001/trade/exchange/{exchange}/listAvailableAccount",
          "options": {
            "strictSSL": false
          },
          "responsePath": ""
        },
        "functions": {
          "listAvailableAccount": ["exchange"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://trader-api:9001/trade/project/{projectId}/getOrSetAccount",
          "options": {
            "strictSSL": false
          },
          "query": {
            "exchange": "{exchange}",
            "depositAsset": "{currency}"
          },
          "responsePath": ""
        },
        "functions": {
          "getOrSetAccount": ["projectId", "exchange", "currency"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://trader-api:9001/trade/project/{projectId}/unLockAccount",
          "options": {
            "strictSSL": false
          },
          "responsePath": ""
        },
        "functions": {
          "unLockAccount": ["projectId"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://trader-api:9001/trade/project/{projectId}/{action}",
          "options": {
            "strictSSL": false
          },
          "body": {
            "symbol": "{symbol}",
            "quantity": "{quantity}",
            "price": "{price}",
            "currencies": "{currencies}",
            "orderId": "{orderId}"
          },
          "responsePath": ""
        },
        "functions": {
          "action": ["projectId", "action", "symbol", "quantity", "price", "currencies", "orderId"]
        }
      },
      {
        "template": {
          "method": "GET",
          "url": "http://trader-api:9001/trade/project/{projectId}/getListenKey",
          "options": {
            "strictSSL": false
          },
          "responsePath": ""
        },
        "functions": {
          "getListenKey": ["projectId"]
        }
      },
      {
        "template": {
          "method": "GET",
          "url": "http://trader-api:9001/trade/project/{projectId}/readPermCreds",
          "options": {
            "strictSSL": false
          },
          "responsePath": ""
        },
        "functions": {
          "readPermCreds": ["projectId"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://trader-api:9001/trade/project/{projectId}/{action}",
          "options": {
            "strictSSL": false
          },
          "body": {
            "listenKey": "{listenKey}"
          },
          "responsePath": ""
        },
        "functions": {
          "dataStream": ["projectId", "action", "listenKey"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://trader-api:9001/trade/project/{projectId}/withdraw",
          "options": {
            "strictSSL": false
          },
          "body": {
            "asset": "{asset}",
            "address": "{address}",
            "amount": "{amount}"
          },
          "responsePath": ""
        },
        "functions": {
          "withdraw": ["projectId", "asset", "address", "amount"]
        }
      },
      {
        "template": {
          "method": "GET",
          "url": "http://smartcontract-api:9003/smartcontract/{version}",
          "options": {
            "strictSSL": false
          },
          "responsePath": ""
        },
        "functions": {
          "smartContactGetVersion": ["version"]
        }
      },
      {
        "template": {
          "method": "GET",
          "url": "http://smartcontract-api:9003/smartcontract/{version}/info",
          "options": {
            "strictSSL": false
          },
          "responsePath": ""
        },
        "functions": {
          "smartContactVersionInfo": ["version"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://smartcontract-api:9003/smartcontract/{version}/release",
          "options": {
            "strictSSL": false
          },
          "body": {
            "depositAddress": "{depositAddress}",
            "amount": "{amount}",
            "project": "{projectId}",
            "stage": "{stageId}"
          },
          "responsePath": ""
        },
        "functions": {
          "smartContactVersionRelease": ["version", "depositAddress", "amount", "projectId", "stageId"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://smartcontract-api:9003/smartcontract/{version}/stop",
          "options": {
            "strictSSL": false
          },
          "body": {
            "version": "{version}",
            "project": "{projectId}"
          },
          "responsePath": ""
        },
        "functions": {
          "smartContactVersionRelease": ["version", "projectId"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://smartcontract-api:9003/smartcontract/{version}/retract",
          "options": {
            "strictSSL": false
          },
          "body": {
            "version": "{version}",
            "project": "{projectId}",
            "scale": "{scale}",
            "denominator": "{denominator}"
          },
          "responsePath": ""
        },
        "functions": {
          "smartContactVersionReTract": ["version", "projectId", "scale", "denominator"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "https://ninja.org/api/user/profile",
          "options": {
            "strictSSL": false
          },
          "headers": {
            "accepts": "application/json",
            "content-type": "application/json",
            "Payload" : "{token}"
          },
          "responsePath": ""
        },
        "functions": {
          "profile": ["token"]
        }
      }
    ]
  },
  "storage": {
    "name": "storage",
    "connector": "loopback-component-storage",
    "provider": "filesystem",
    "root": "./files"
  }
}
