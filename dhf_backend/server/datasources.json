{
  "mongodb": {
    "host": "dhf-mongodb",
    "port": 27018,
    "url": "",
    "database": "dhf-platform",
    "password": "",
    "name": "mongodb",
    "user": "",
    "connector": "mongodb"
  },
  "db": {
    "connector": "memory"
  },
  "rest": {
    "connector": "rest",
    "debug": true,
    "options": {
      "headers": {
        "accept": "application/json",
        "content-type": "application/json"
    },
    "strictSSL": false
    },
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "http://trader-api:9001/trade/exchange/{exchange}/listLockAccount",
          "options": {
            "strictSSL": false
          },
          "responsePath": ""
        },
        "functions": {
          "listLockAccount": ["exchange"]
        }
      },
      {
        "template": {
          "method": "GET",
          "url": "http://trader-api:9001/trade/exchange/{exchange}/listAvailableAccount",
          "options": {
            "strictSSL": false
          },
          "responsePath": ""
        },
        "functions": {
          "listAvailableAccount": ["exchange"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://trader-api:9001/trade/project/{projectId}/getOrSetAccount",
          "options": {
            "strictSSL": false
          },
          "query": {
            "exchange": "{exchange}",
            "depositAsset": "{currency}"
          },
          "responsePath": ""
        },
        "functions": {
          "getOrSetAccount": ["projectId", "exchange", "currency"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://trader-api:9001/trade/project/{projectId}/unLockAccount",
          "options": {
            "strictSSL": false
          },
          "responsePath": ""
        },
        "functions": {
          "unLockAccount": ["projectId"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://trader-api:9001/trade/project/{projectId}/action",
          "options": {
            "strictSSL": false
          },
          "responsePath": ""
        },
        "functions": {
          "action": ["projectId"]
        }
      }
  ]
}
}
