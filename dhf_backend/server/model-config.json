{
  "_meta": {
    "sources": [
      "loopback/common/models",
      "loopback/server/models",
      "../common/models",
      "./models"
    ],
    "mixins": [
      "loopback/common/mixins",
      "loopback/server/mixins",
      "../common/mixins",
      "./mixins"
    ]
  },
  "User": {
    "dataSource": "mongodb",
    "public": false
  },
  "AccessToken": {
    "dataSource": "mongodb",
    "public": false
  },
  "ACL": {
    "dataSource": "mongodb",
    "public": false
  },
  "RoleMapping": {
    "dataSource": "mongodb",
    "public": false,
    "options": {
      "strictObjectIDCoercion": true
    }
  },
  "Role": {
    "dataSource": "mongodb",
    "public": false
  },
  "Project": {
    "dataSource": "mongodb",
    "public": true,
    "options": {
      "remoting": {
        "sharedMethods" : {
          "*": false,
          "create": true,
          "updateAll": true,
          "deleteById": true,
          "listProjects": true,
          "findById": true
        }
      }
    }
  },
  "Account": {
    "dataSource": "mongodb",
    "public": false
  },
  "user": {
    "dataSource": "mongodb",
    "public": true
  },
  "link-to-contract": {
    "dataSource": "mongodb",
    "public": true,
    "options": {
      "remoting": {
        "sharedMethods" : {
          "*": false,
          "create": true,
          "updateAll": true,
          "deleteById": true,
          "listProjects": true,
          "findById": true,
          "verify": true
        }
      }
    }
  }
}
