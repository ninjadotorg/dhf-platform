{
  "name": "link-to-contract",
  "plural": "link-to-contract",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "smartAddress": {
      "type": "string",
      "required": true
    },
    "verifyAmount": {
      "type": "number",
      "default": 0
    },
    "status": {
      "type": "string",
      "required": true,
      "emun": ["pending", "approved", "rejected"]
    },
    "activeDate": {
      "type": "date"
    },
    "requestDate": {
      "type": "date"
    }
  },
  "hidden": ["activeDate"],
  "validations": [],
  "relations": {
    "User": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "ownerId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "trader",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {},
  "mixins": {
    "DisableMethods": {
      "expose": [
        "create",
        "findById",
        "deleteById",
        "replaceById",
        "verify"
      ]
    }
  }
}
