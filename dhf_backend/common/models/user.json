{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "emailVerificationRequired": true,
  "strict": true,
  "properties": {
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "avatar": {
      "type": "string"
    },
    "isTrader": {
      "type": "boolean"
    },
    "userType": {
      "type": "string",
      "enum": [
        "user",
        "backend",
        "admin"
      ]
    }
  },
  "hidden": ["realm"],
  "relations": {
    "project": {
      "type": "hasMany",
      "model": "project",
      "foreignKey": ""
    },
    "funding": {
      "type": "hasMany",
      "model": "funding",
      "foreignKey": ""
    },
    "contract": {
      "type": "hasMany",
      "model": "link-to-contract",
      "foreignKey": ""
    },
    "accessToken": {
      "type": "hasMany",
      "model": "accessToken",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "listTrader"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "resentVerify"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "requestPasswordReset"
    },
    {
       "accessType": "EXECUTE",
       "property":"updatePassword",
       "principalType": "ROLE",
       "principalId": "$authenticated",
       "permission": "ALLOW"
     },
    {
       "accessType": "EXECUTE",
       "property":"setPassword",
       "principalType": "ROLE",
       "principalId": "user",
       "permission": "ALLOW"
     },
    {
       "accessType": "EXECUTE",
       "property":"updatePassword",
       "principalType": "ROLE",
       "principalId": "$authenticated",
       "permission": "ALLOW"
     },
     {
       "accessType": "EXECUTE",
       "property":"updateProfile",
       "principalType": "ROLE",
       "principalId": "$authenticated",
       "permission": "ALLOW"
     }
  ],
  "methods": {},
  "mixins": {
    "DisableMethods": {
      "expose": [
        "create",
        "confirm",
        "resentVerify",
        "setPassword",
        "requestPasswordReset",
        "findById",
        "deleteById",
        "replaceById",
        "login",
        "logout",
        "listTrader",
        "updatePassword",
        "updateProfile"
      ]
    }
  }
}
