{
  "name": "project",
  "base": "PersistedModel",
  "idInjection": true,
  "hidden": ["UserId", "isTransfer"],
  "strict": true,
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "owner": {
      "type": "string",
      "required": true
    },
    "target": {
      "type": "number",
      "required": true
    },
    "exchange": {
      "type": "string",
      "required": true,
      "default": "binance"
    },
    "max": {
      "type": "string"
    },
    "fundingAmount": {
      "type": "string"
    },
    "updatedAmount": {
      "type": "string"
    },
    "releasedAmount": {
      "type": "string"
    },
    "pendingAmount": {
      "type": "string"
    },
    "refundAmount": {
      "type": "string"
    },
    "startTime": {
      "type": "date",
      "required": true
    },
    "deadline": {
      "type": "date",
      "required": true
    },
    "lifeTime": {
      "type": "number"
    },
    "currency": {
      "type": "string",
      "required": true,
      "default": "ETH"
    },
    "isTransfer": {
      "type": "boolean"
    },
    "stages": {
      "type": "object",
      "default": [10, 25, 30, 35]
    },
    "createdDate": {
      "type": "date"
    },
    "updatedDate": {
      "type": "date"
    },
    "depositAddress": {
      "type": "string"
    },
    "currentStage": {
      "type": "string"
    },
    "smartContractVersion": {
      "type": "string"
    },
    "state": {
      "type": "string",
      "required": true,
      "enum": [
        "NEW",
        "INITFUND",
        "APPROVED",
        "READY",
        "RELEASEED",
        "STOP",
        "WITHDRAW"
      ]
    }
  },
  "validations": [],
  "relations": {
    "User": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "",
      "required": true
    },
    "releaseState": {
      "type": "hasMany",
      "model": "release-state",
      "foreignKey": "",
      "required": true
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "listProjects"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "cancel"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "trader",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "trader",
      "permission": "ALLOW",
      "property": "myProjects"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {},
  "mixins": {
    "DisableMethods": {
      "expose": [
        "create",
        "findById",
        "deleteById",
        "replaceById",
        "listProjects",
        "myProjects",
        "cancel"
      ]
    }
  }
}
