{
  "name": "trader",
  "base": "PersistedModel",
  "idInjection": true,
  "properties": {
    "parentId":{
      "type": "string"
    },
    "orderId":  {
      "type": "string"
    },
    "symbol":  {
      "required": true,
      "type": "string"
    },
    "quantity":  {
      "required": true,
      "type": "number"
    },
    "price":  {
      "required": true,
      "type": "number"
    },
    "flags":  {
      "required": true,
      "type": "string"
    },
    "function":  {
      "required": true,
      "type": "string"
    },
    "totalAmount": {
      "required": true,
      "type": "number"
    },
    "totalMatchedAmount": {
      "required": true,
      "type": "number"
    },
    "state":  {
      "type": "string",
      "required": true,
      "emun": ["PENDING", "MATCHED", "DONE", "CANCEL"]
    }
  },
  "validations": [],
  "relations": {
    "User": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "ownerId"
    },
    "Project": {
      "type": "belongsTo",
      "model": "project",
      "foreignKey": "projectId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "trader",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {},
  "mixins": {
    "DisableMethods": {
      "expose": [
        "buy",
        "sell",
        "marketBuy",
        "marketSell",
        "cancel",
        "cancelOrders",
        "orderStatus",
        "allOrders",
        "trades",
        "prevDay",
        "candlesticks"
      ]
    }
  }
}
